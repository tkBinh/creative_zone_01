<% provide :title, t(".sign_up") %>
<h1><%= t ".sign_up" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
  <%= render "shared/error_user_messages", object: f.object %>

  <%= f.label t ".label_name" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label t ".label_email" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label t ".label_pass" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label t ".label_pass_cf" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit t(".label_submit"), class: "btn btn-primary" %>
<% end %>
  </div>
</div>
